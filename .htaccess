RewriteEngine on

# browser requests PHP
RewriteCond %{THE_REQUEST} ^[A-Z]{3,9}\ /([^\ ]+)\.php
RewriteRule ^/?(.*)\.php$ /$1 [L,R=301]

# check to see if the request is for a PHP file:
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^/?(.*)$ /$1.php [L]

ErrorDocument 404 /404.php

<If "%{REQUEST_URI} =~ /ind\x2F.*/">
    ErrorDocument 404 /ind/404.php
</If>

<If "%{REQUEST_URI} =~ /jp\x2F.*/">
    ErrorDocument 404 /jp/404.php
</If>

# disable auth for pagespeed test on dev
#Require all granted